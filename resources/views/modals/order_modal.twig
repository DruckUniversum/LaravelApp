{# templates/modals/order_modal.twig #}
<div class="modal fade" id="orderModal{{ order.Order_ID }}" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bestellungsdetails: {{ order.design.Name }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Produkt:</strong> {{ order.design.Name }}</p>
                <p><strong>Preis:</strong> {{ order.Paid_Price }} BCY</p>
                <p><strong>Status:</strong> {{ order.Payment_Status }}</p>
                <p><strong>Bestelldatum:</strong> {{ order.Order_Date }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schlie√üen</button>
            </div>
        </div>
    </div>
</div>
